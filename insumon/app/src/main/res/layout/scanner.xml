<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scanner">

    <TextView
        android:id="@+id/res"
        android:layout_width="97dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="結果"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/btn_take_pic"
        app:layout_constraintTop_toBottomOf="@+id/btn_take_pic"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:text="確認"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_take_pic"
        app:layout_constraintTop_toBottomOf="@+id/btn_take_pic" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="408dp"
        android:layout_height="71dp"
        android:background="#BCFCFCFC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <Button
        android:id="@+id/manualinput"
        android:layout_width="188dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:onClick=""
        android:text="手動輸入"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/enter"
        app:layout_constraintStart_toStartOf="@+id/res"
        app:layout_constraintTop_toBottomOf="@+id/res"
        tools:ignore="OnClick" />

    <ImageView
        android:id="@+id/show_image"
        android:layout_width="112dp"
        android:layout_height="109dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="151dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="152dp"
        android:src="@drawable/ic_launcher_background"
        android:text="Hello World!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_take_pic"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_below="@+id/show_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:text="拍照"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_image"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>